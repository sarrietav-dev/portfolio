<svg class="bokeh" viewBox="0 0 10 10" xmlns="http://www.w3.org/2000/svg">
	<circle cx="10%" cy="85%" r="75%"></circle>
	<circle cx="45%" cy="50%" r="15%"></circle>
	<circle cx="85%" cy="35%" r="30%"></circle>
	<circle cx="60%" cy="85%" r="20%"></circle>
	<circle cx="45%" cy="50%" r="30%"></circle>
	<circle cx="35%" cy="25%" r="20%"></circle>
	<circle cx="90%" cy="-25%" r="35%"></circle>
	<circle cx="-15%" cy="30%" r="30%"></circle>
	<circle cx="65%" cy="85%" r="55%"></circle>
	<circle cx="45%" cy="50%" r="20%"></circle>
</svg>

<style>
	:root {
		--t: 6s;
		--color1: #1a1a2e; /* Dark Blue */
		--color2: #16213e; /* Very Dark Blue */
		--color3: #0f3460; /* Darker Blue */
		--color4: #53354a; /* Dark Purple */
		--color5: #6c5b7b; /* Muted Purple */
	}

	body {
		background-color: #0d0d0d; /* Almost black background */
	}

	.bokeh {
		height: 100vh;
		width: 100vw;
		background-color: #121212; /* Dark gray background */
		position: fixed;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		filter: blur(50px);
		z-index: -1;
		transform: translateZ(0);
		backface-visibility: hidden;
	}
	.bokeh circle {
		animation: rotate var(--t) linear infinite;

		fill: var(--color1);
		opacity: 0.43;
		transform-origin: 50%;

		&:nth-child(2n) {
			fill: var(--color2);
			transform-origin: 20% 110%;
			animation-delay: -1 * var(--t) / 2;
			animation-duration: var(--t) * 0.6886;
			opacity: 0.2;
		}
		&:nth-child(3n) {
			opacity: 0.65;
			fill: var(--color3);
			transform-origin: 70% 30%;
			animation-delay: -1 * var(--t) / 4;
			animation-duration: var(--t) * 1.3333;
		}
		&:nth-child(4n) {
			fill: var(--color4);
			transform-origin: 110% 70%;
			animation-delay: -1 * var(--t) / 3;
			animation-duration: var(--t) * 0.79666;
		}
		&:nth-child(5n) {
			fill: var(--color5);
			transform-origin: 30% 40%;
		}
		&:nth-child(6n) {
			fill: var(--color1);
			transform-origin: -10% 80%;
			animation-delay: -1 * var(--t) * 1.3;
		}
		&:nth-child(7n) {
			fill: var(--color2);
			transform-origin: 70% -10%;
		}
		&:nth-child(8n) {
			fill: var(--color4);
			transform-origin: -30% 50%;
			animation-delay: -1 * var(--t) / 2.5;
		}
	}

	@keyframes rotate {
		0% {
			transform: rotate(0deg);
		}
		100% {
			transform: rotate(360deg);
		}
	}
</style>
